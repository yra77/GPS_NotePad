<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             xmlns:prism1="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:effects="clr-namespace:GPS_NotePad.Effects"
             x:Class="GPS_NotePad.Views.MainPage"
             ios:Page.UseSafeArea="True" 
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Label Text="GPS notepad" Margin="0,50,0,0" HorizontalOptions="Center" FontSize="25" FontAttributes="Italic" TextColor="LawnGreen"/>
        <Frame BackgroundColor="AliceBlue" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" 
               Padding="0" Margin="15,40,15,0" HasShadow="True" BorderColor="LightGray">
        <StackLayout >
                <StackLayout BackgroundColor="AliceBlue">
                    
                <StackLayout Margin="10,25,10,0">
                        <Entry Keyboard="Text" Text="{Binding Name}" Placeholder="Name" PlaceholderColor="LightGray" 
                               FontSize="16" IsVisible="{Binding IsVisibleEntry}">
                            <Entry.Effects>
                                <effects:EntryColorUnderline_Effect/>
                            </Entry.Effects>
                        </Entry>
                    
                        <Entry Keyboard="Email" Text="{Binding Email}" Placeholder="Email" PlaceholderColor="LightGray" FontSize="16">
                            <Entry.Effects>
                                <effects:EntryColorUnderline_Effect/>
                            </Entry.Effects>
                        </Entry>

                        <Entry Keyboard="Text" IsPassword="true" Text="{Binding Password}" Placeholder="Password" 
                               PlaceholderColor="LightGray" FontSize="16">
                            <Entry.Effects>
                                <effects:EntryColorUnderline_Effect/>
                            </Entry.Effects>
                        </Entry>
                    
                        <Entry Text="{Binding PasswordConfirm}" Placeholder="Password confirm" PlaceholderColor="LightGray" 
                               Keyboard="Text" IsPassword="true" FontSize="16" IsVisible="{Binding IsVisibleEntry}">
                            <Entry.Effects>
                                <effects:EntryColorUnderline_Effect/>
                            </Entry.Effects>
                        </Entry>
                    
                        <Button IsEnabled="False" Command="{Binding OkBtn}" Text="Ok" VerticalOptions="End" Margin="40,40,40,0"/>
                        <Button Command="{Binding GoogleRegBtn}" Text="Google" FontSize="14" TextColor="Gray"
                                FontAttributes="Bold" HorizontalOptions="CenterAndExpand" 
                                BackgroundColor="LightGreen" CornerRadius="25" VerticalOptions="EndAndExpand" Margin="20,0,20,0"/>
                    </StackLayout>
                    
                </StackLayout>
            
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" Margin="0,50,0,0">
                <Button Command="{Binding LogininBtn}" Text="Loginin" HorizontalOptions="FillAndExpand"></Button>
                    <Button Command="{Binding RegistrBtn}" Text="Registr" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
        </Frame>
    </Grid>

</ContentPage>
